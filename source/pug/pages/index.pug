        #article-subscribe
          .a-container
            .a-header Get the best offers first!
            .a-content
              form.form_two
                .f-group
                  lable Email
                  input.txt_input(type="text" placeholder="Your Email Address")
            .a-subscribe-btn Subscribe
        #article-contact
            .a-container
              .a-header Contact
              .a-content
                | If you have any questions, do not hesitate to ask them.
                form.form_two
                  .f-group
                    input.txt_input(type="text" placeholder="Name")
                  .f-group
                    input.txt_input(type="Email" placeholder="Email")
                  .f-group
                    input.txt_input(type="text" placeholder="Message")
              .a-send-btn Send Message

        #footer
          .footer-header Find Us On
          .footer-socialMedia
            .icon.icon-facebook
              img(src="assets/img/icon-facebook.svg", alt="facebook_icon")
            .icon.icon-instagram
              img(src="assets/img/icon-instagram.svg", alt="instagram")
            .icon.icon-snapchat
              img(src="assets/img/icon-google_plus.svg", alt="snapchat")
