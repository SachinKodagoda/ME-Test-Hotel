          .a-location
            img(src="assets/img/img_4.jpg", alt="location")
            .a-location_address
              i.fa.fa-map-marker
              | No:xx , Some adr , Province , Country
            .a-location_address
              i.fa.fa-phone
              | Phone: +94 123456789
            .a-location_address
              i.fa.fa-envelope
              | Email: mail@mail.com

        #article-hotels
          .a-hotelONE
            img(src="assets/img/img_5.jpg", alt="location")
            .a-cityName Cinque Terre
          .a-hotelONE
            img(src="assets/img/img_6.jpg", alt="location")
